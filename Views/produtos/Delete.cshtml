@model Estoque.Models.produtos

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir o item @Html.DisplayFor(model => model.nomeProduto) ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nomeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorCompra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valorVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valorVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dataProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dataProduto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idProdutos" />
        <input type="submit" value="Excluir" class="btn btn-danger mt-2" /> 
        <a class="btn btn-warning mt-2 " asp-action="Index">Voltar</a>
    </form>
</div>
